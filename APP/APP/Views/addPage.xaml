<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APP.Views.addPage"
             Title="Agregar Usuario">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Guardar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Nombre" FontSize="Medium" FontAttributes="Bold" TextColor="{StaticResource colorPrimaryDark}"></Label>
            <Entry x:Name="nombre"></Entry>
            <Label Text="Apellido" FontSize="Medium" FontAttributes="Bold" TextColor="{StaticResource colorPrimaryDark}"></Label>
            <Entry x:Name="apellido"></Entry>
            <Label Text="Telefono" FontSize="Medium" FontAttributes="Bold" TextColor="{StaticResource colorPrimaryDark}"></Label>
            <Entry x:Name="telefono"></Entry>
            <Label Text="Correo" FontSize="Medium" FontAttributes="Bold" TextColor="{StaticResource colorPrimaryDark}"></Label>
            <Entry x:Name="correo"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>